{
  "name": "university_lms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "seed": "npx tsx database/seed.ts",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio",
    "test": "jest",
    "test:integration": "jest __tests__/integration/",
    "test:e2e": "jest __tests__/e2e/",
    "jobs:health": "npx tsx -e \"import('./lib/worker').then(w => w.BackgroundWorker.healthCheck()).then(console.log)\"",
    "jobs:nightly": "npx tsx -e \"import('./lib/worker').then(w => w.ManualJobTriggers.triggerNightlyMaintenance())\"",
    "jobs:due-reminders": "npx tsx -e \"import('./lib/worker').then(w => w.ManualJobTriggers.triggerDueReminders())\"",
    "metrics:view": "npx tsx -e \"import('./lib/metrics').then(m => m.LibraryMetrics.getMetrics()).then(console.log)\"",
    "metrics:alerts": "npx tsx -e \"import('./lib/metrics').then(m => m.LibraryMetrics.getRecentAlerts()).then(console.log)\""
  },
